<%# app/views/layouts/navbar/_navbar.html.erb %>

<header class="sticky top-0 h-12 bg-green-900">
  <nav>

    <ul class="flex justify-end">

      <li>
        <%= link_to 'Accueil', root_path, class: "p-2" %>
      </li>

      <li>
        <%= link_to 'Créer un Footsalle', new_event_path, class: "p-2" %>
      </li>


      <% unless user_signed_in? %>
        <li>
          <%= link_to "Connexion", new_user_session_path, class: "p-2" %>
        </li>

      <% else %>
        <li>
          <%= link_to 'Modifier mon Compte', edit_user_registration_path, class: "p-2" %>
        </li>
        <li>
          <%= link_to 'Déconnexion', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "p-2" %>
        </li>

      <% end %>

    </ul>

  </nav>
</header>
