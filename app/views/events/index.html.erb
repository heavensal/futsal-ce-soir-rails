
<h1 class="text-white text-2xl text-center my-4">
  Tous les événements
</h1>

<div class="text-center mb-4">
  <%= link_to 'Créer', new_event_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
</div>

<section id="grid-events" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @events.each do |event| %>
    <div id="event-<%= event.id %>" class="bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-xl font-bold mb-2">
        <%= link_to event.title, event, class: "text-blue-500 hover:underline" %>
      </h2>
      <p class="mb-2">
        <strong>Lieu:</strong> <%= event.location %>
      </p>
      <p class="mb-2">
        <strong>Début:</strong> <%= event.start_time %>
      </p>
      <p class="mb-2">
        <strong>Statut:</strong> <%= event.privacy %>
      </p>
    </div>
  <% end %>
</section>