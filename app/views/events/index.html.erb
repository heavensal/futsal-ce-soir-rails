<%= render 'layouts/components/title/h1', title: "Les prochains footsalles" %>

<div class="my-4 text-center">
  <%= link_to 'CrÃ©er un Footsalle',  new_event_path, class:"bg-yellow-700 hover:bg-yellow-600 hover:duration-150 transition px-4 py-2 rounded-md" %>
</div>

<section class="grid grid-cols-2 gap-4">
  <% @events.each do |event| %>

    <%= link_to event_path(event), class:"rounded-md shadow-gray-700 shadow-sm" do %>
      <div id="<%= event.id %>">

        <h2 class="text-white text-center text-xl bg-green-950 border-green-950 rounded-t-md py-2">
          <%= event.title %>
        </h2>

        <ul class="p-4">

          <li>
            <%= event.location %>
          </li>

          <li>
            <%= event.start_time %>
          </li>

          <li class="text-end text-green-900 text-xl flex justify-end items-center gap-x-2">
            <%= render 'layouts/svg/icons/players' %>
            <div>
              <%= event.players.count %> / <%= event.number_of_players %>
            </div>
          </li>

        </ul>

      </div>

    <% end %>

  <% end %>

</section>
